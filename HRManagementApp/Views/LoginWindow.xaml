<Window x:Class="HRManagementApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HRManagementApp.ViewModels"
        xmlns:converters="clr-namespace:HRManagementApp.Converters"
        Title="HR Management System - Login" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#ECF0F1">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="HR Management System" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Please login to continue" 
                          FontSize="14" 
                          Foreground="#BDC3C7"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Login Form -->
        <Border Grid.Row="1" 
                Margin="40"
                Background="White"
                CornerRadius="10"
                Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="#BDC3C7" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Sign In" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50"
                          Margin="0,0,0,30"
                          HorizontalAlignment="Center"/>
                
                <!-- Username -->
                <TextBlock Text="Username" 
                          FontSize="14" 
                          Foreground="#34495E"
                          Margin="0,0,0,5"/>
                <Border BorderBrush="#BDC3C7" 
                       BorderThickness="1" 
                       CornerRadius="5"
                       Margin="0,0,0,20">
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                            Padding="10"
                            FontSize="14"
                            BorderThickness="0"/>
                </Border>
                
                <!-- Password -->
                <TextBlock Text="Password" 
                          FontSize="14" 
                          Foreground="#34495E"
                          Margin="0,0,0,5"/>
                <Border BorderBrush="#BDC3C7" 
                       BorderThickness="1" 
                       CornerRadius="5"
                       Margin="0,0,0,10">
                    <PasswordBox x:Name="PasswordBox"
                                Padding="10"
                                FontSize="14"
                                BorderThickness="0"
                                KeyDown="PasswordBox_KeyDown"/>
                </Border>
                
                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                          Foreground="#E74C3C"
                          FontSize="12"
                          Margin="0,0,0,10"
                          TextWrapping="Wrap"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <!-- Login Button -->
                <Button Command="{Binding LoginCommand}"
                       CommandParameter="{Binding ElementName=PasswordBox}"
                       Content="Login"
                       Padding="0,12"
                       FontSize="16"
                       FontWeight="Bold"
                       Background="#3498DB"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Margin="0,10,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Default Credentials Info -->
                <Border Background="#ECF0F1" 
                       CornerRadius="5" 
                       Padding="10"
                       Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="Default Credentials" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#7F8C8D"
                                  Margin="0,0,0,5"/>
                        <TextBlock FontSize="11" Foreground="#95A5A6">
                            <Run Text="Admin:" FontWeight="Bold"/>
                            <Run Text="admin / admin123"/>
                        </TextBlock>
                        <TextBlock FontSize="11" Foreground="#95A5A6">
                            <Run Text="HR:" FontWeight="Bold"/>
                            <Run Text="hr / hr123"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>

