<Window x:Class="HRManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRManagementApp"
        xmlns:vm="clr-namespace:HRManagementApp.ViewModels"
        mc:Ignorable="d"
        Title="HR Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <Grid>
                <TextBlock Text="HR Management System" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding WelcomeMessage}" 
                              FontSize="14" 
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <Button Content="Logout" 
                           Command="{Binding LogoutCommand}"
                           Background="#E74C3C"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="12,6"
                           Cursor="Hand"
                           ToolTip="Logout from the system"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Navigation Menu -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Left"
                   Margin="20,10,0,0"
                   VerticalAlignment="Top">
            <Button Content="Employees" 
                   Command="{Binding ShowEmployeesCommand}" 
                   Margin="5" 
                   Padding="15,8"
                   Cursor="Hand"
                   ToolTip="Manage employees">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveViewName}" Value="Employees">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Departments" 
                   Command="{Binding ShowDepartmentsCommand}" 
                   Margin="5" 
                   Padding="15,8"
                   Cursor="Hand"
                   ToolTip="Manage departments">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveViewName}" Value="Departments">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Attendance" 
                   Command="{Binding ShowAttendanceCommand}" 
                   Margin="5" 
                   Padding="15,8"
                   Cursor="Hand"
                   ToolTip="Track employee attendance">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveViewName}" Value="Attendance">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Leave" 
                   Command="{Binding ShowLeaveCommand}" 
                   Margin="5" 
                   Padding="15,8"
                   Cursor="Hand"
                   ToolTip="Manage leave requests">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveViewName}" Value="Leave">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Payroll" 
                   Command="{Binding ShowPayrollCommand}" 
                   Margin="5" 
                   Padding="15,8"
                   Cursor="Hand"
                   ToolTip="Calculate and manage payroll">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveViewName}" Value="Payroll">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Users" 
                   Command="{Binding ShowUserManagementCommand}" 
                   Margin="5" 
                   Padding="15,8"
                   Cursor="Hand"
                   ToolTip="Manage system users (Admin only)"
                   Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#9B59B6"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveViewName}" Value="Users">
                                <Setter Property="Background" Value="#8E44AD"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        
        <!-- Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="10,50,10,10"/>
    </Grid>
</Window>
